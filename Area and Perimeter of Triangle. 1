#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    int b=5,h=6,s1=1,s2=2,s3=3;
    float Area,perimeter;
    Area=(0.5*b*h);
    perimeter=(s1+s2+s3);
    printf("Area of Triangle is %.2f\n",Area);
    printf("Perimeter of Triangle is %.2f\n",perimeter);
    return 0;  
}
